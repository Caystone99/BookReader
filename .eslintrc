{
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "strict":"error",
    "no-trailing-spaces": "error",
    "indent": [ "error", 2 ],
    "unicode-bom": [ "error", "never" ],
    "no-warning-comments": "warn",
    "semi": "error",
    "no-extra-semi": "error",
    "no-new-wrappers": "error",
    "guard-for-in": "error",
    "no-multi-str": "error",
    "no-array-constructor": "error",
    "no-new-object": "error",
    "camelcase": "error",
    "brace-style": "error",
    "object-curly-spacing": "error",
    "object-property-newline": "error",
    "array-bracket-spacing": "error",
    "quotes": [ "error", "single" ],
    "no-undef": "error"
  }
}
